<h1><%= @employee.name %></h1>

<h4><%= @employee.title %> @ <%= @employee.company.name %> </h4>

<div>
   <%= form_for @employee do |f| %>
      <%= f.label "Name:" %>
      <%= f.text_field :name %><br>
      <%= f.label "Title:" %>
      <%= f.text_field :title %><br>
      <%= f.label "Company:" %>
      <%= f.collection_select :company_id, Company.all, :id, :name, include_blank: 'None' %><br>
      <%= f.submit "Confirm Changes" %>
   <% end %>
</div>

