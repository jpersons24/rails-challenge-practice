<h1><%= @company.name %></h1>

<div>
   <p>Offices in the following buildings and on respective floors:</p>
   <ul>
      <% @company.office_building_and_floor.each do |office| %>
         <li><%= office %></li>
      <% end %>
   </ul>

   <p>Total rent per month: $<%= @company.rent_paid.sum %></p>

</div>


<div>
   <p>Add employee to <%= @company.name %> records:</p>

   <%= form_for @employee do |f| %>
     <%= f.label "Name:" %>
     <%= f.text_field :name %> <br>
     <%= f.label "Title:" %>
     <%= f.text_field :title %> <br>
     <%= f.label "Company Name:" %>
     <%= f.collection_select :company_id, Company.where(name: @company.name), :id, :name %> <br>

     <%= f.submit "Add Employee" %>
   <% end %>
</div>
<br>
<br>

<p><%= link_to 'Click here', edit_employee_path(@employee) %> to remove employee from company records!</p>

<div>
   <p>Remove employee from <%= @company.name %></p>

   <%= form_for @employee do |f| %>
      <%= f.label "Choose Employee:" %>
      <%= f.collection_select :company_id, Employee.all, :id, :name %>
      <%= f.submit "Remove Employee" %>
   <% end %>
</div>


<div>
<p>Current employees:</p>
   <ul>
      <% @company.employees.each do |employee| %>
         <li><%= employee.name %> - <i><%= employee.title %></i></li>
      <% end %>
   </ul>
</div>



